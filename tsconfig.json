{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "strict": true,
    "typeRoots": ["node_modules/@types", "src/@types"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}
